.deleted
  .not-deleted
    display none

.published
  .deleted
    display none


body



  #nav-header
    height 48px
    .navbar-inner
      height 100%

  #nav-container
    width 1170px
    margin-left auto
    margin-right auto
    margin-top 3px
    vertical-align  middle

    .avatar
      img
        width 42px
        height auto

    .uploads
      width 30px
      span
        display block
        width 100%
        text-align  center
        font-size 70%
        margin-top  -8px

  //background url('img/body-bg.png')
  #main-container
    width 1170px
    margin-left auto
    margin-right auto
    margin-bottom 25px
    position relative

    >div
      position absolute

  #main-content
    position relative



div.image-mask
  background-color black
  opacity .5
  position absolute


.fileinputs
  position relative
  overflow  hidden
  input[type=file]
    position relative
    -moz-opacity 0
    opacity 0
    z-index 2
    width 1000px
    left  -400px
    &:hover
      cursor pointer

  .fakefile
    position absolute
    top 0px
    left 0px
    z-index 1
    width 100%

    &.hover
      text-decoration none
      background-color #eeeeee
      color #005580



#modal-login
  background linear-gradient(top, darken(#fff,1%), darken(#fff,6%))
  border-radius 5px
  .alert
    font-size 87%
    line-height 110%
    padding 5px
  label
    display none
    &.checkbox
      display block
      float left
  button
    float right
  .login-password
    padding-right 20px
    border-right 1px solid darken(#fff,10%)
    float left
    width 219px
    position relative
    &:before
      display block
      content ""
      width 1px
      position absolute
      right 0px
      top 0px
      bottom 0px
      background-color rgba(255,255,255,0.8)

  .social-auth
    padding-left 20px
    float left
    width 220px
    a
      display block
      clear both
      line-height 24px
      margin-bottom 10px
      color #666
      &:before
        display block
        height 24px
        width 24px
        margin-right 10px
        opacity 1
        box-shadow inset 0 1px 0 rgba(255,255,255,.2), 0 1px 2px rgba(0,0,0,.05)
        float left
        //border 1px solid #0055cc
        //border-radius 3px
      &.social-btn-facebook:before
        content url('img/icons/facebook.png')
      &.social-btn-google-oauth2:before
        content url('img/icons/google.png')
      &.social-btn-twitter:before
        content url('img/icons/twitter.png')
      &.social-btn-dropbox:before
        content url('img/icons/dropbox.png')

  h2
    font-size 100%
    line-height 110%
    margin-bottom 15px
    font-family Arial
  .modal-body
    padding-top 20px
  .close
    position absolute
    top 10px
    right 15px

article.deleted
  .image-wrapper, .video-wrapper
    background-image:url(img/deleted.png);
    background-repeat:no-repeat;
    background-position:50% 30%;
    img
      opacity 0.5

.thumbnails

  li
    .thumbnail

      background-color transparent
      &.deleted
        background-image:url(img/deleted.png);
        background-repeat:no-repeat;
        background-position:50% 30%;
        img
          opacity 0.5

      &.album
        height 200px
        span.img
          display inline-block
          width 150px
          height 115px

        div.thumb-header
          display inline-block
          margin-top 5px
          width 150px
          a
            float right
          .label
            float left
        div.stats
          float left
          display block
        div.actions
          float right
          display block



      &.video, &.image
        height 160px
        position relative
        padding 0
        border none

        .legend
          position absolute
          bottom: 0
          left 0
          righ: 0
          padding 3px 0 3px 5px
          color black
          display none
          background-color white
          opacity 0.9
          width 165px
          p
            margin 0
            font-size 11px
            line-height 11px
            height 12px


        .action
          position absolute
          top 2px
          display none
          z-index 20
          &.persist
            display block

          &.rotate-left
            right 5px

          &.rotate-right
            right 20px

          &.remove, &.restore
            left 20px

          &.select
            left 5px

        &.selected
          background-color gainsboro

        .actions
          //top 5px
          position absolute
          width 100%
          background whiteSmoke
          margin-left -4px
          margin-top -4px
          z-index 10
          opacity 0.95


      .thumbnail-container
        display inline-block
        position relative
        h5, h6
          line-height 5px
          text-align  left
        p.date
          line-height 10px
          font-size 12px
          margin  0
          text-align  left

        img
          width auto
          max-height 115px


.running, .deleted
  position absolute
  background-color black
  opacity 0.5
  z-index 10
  top 0
  left 0
  bottom 0
  right 0


